@{
    Layout = "~/Views/MainLayout.cshtml";
}
@model IEnumerable< EKLEXIA.ViewModels.MembersVM>;


       
<div class="card">
    <div class="card-header">
        <h5 class="m-0 font-weight-bold text-center">Birthdays</h5>
        



        
       
        <div class="card-header-right">
         
               
                <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
            </div>

       </div>
  
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>CH.No</th>
                                <th>Name</th>
                                <th>DoB</th>
                                <th>Gender</th>
                                <th>Age</th>
                                <th>Phone</th>
                             
                                <th>Town</th>
                                
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var Member in Model)
                            {
                            <tr>
                                <td>@Member.IDNumber</td>
                                <td>@Member.Fullname</td>
                                <td> @Member.DateofBirth.ToString("yyyy-MM-dd")</td>

                                <td>@Member.GenderId</td>
                                <td>@Member.Age</td>
                                <td>@Member.Telephone</td>

                               
                                <td><progress></progress></td>
                                <td>
                                    <div class="text-center">
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Select an Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">

                                 
                                            <a class="dropdown-item-custom" asp-action="EditIncident" asp-controller="Incident" asp-route-Id="@Member.MemberId">Edit</a>
                                        
                                        <a class="dropdown-item-custom" asp-action="CommentIncident" asp-controller="Incident" asp-route-Id="@Member.MemberId">View</a>
                                        <a class="dropdown-item-custom" asp-action="PrintIncident" asp-controller="Incident" asp-route-Id="@Member.MemberId">Print</a>

                                        <a class="dropdown-item-custom" asp-action="DeleteIncident" asp-controller="Incident" asp-route-Id="@Member.MemberId">Delete</a>


                                    </div>
                                </div>
                                </div>
                                </td>
                            </tr>
                            }




                        </tbody>
                    </table>
                </div>
            </div>

            </div>
       
   

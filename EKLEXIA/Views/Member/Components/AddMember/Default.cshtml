@{
    Layout = "~/Views/MainLayout.cshtml";
}
@model Ecclesia.ViewModels.AddMemberVM;




<div id="smartwizard">


    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="#step-1">
                <strong>Step 1</strong> <br>Bio Info
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step-2">
                <strong>Step 2</strong> <br>Address
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#step-3">
                <strong>Step 3</strong> <br>Upload Image
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="#step-4">
                <strong>Step 4</strong> <br>Other Info
            </a>
        </li>
    </ul>
    @using (Html.BeginForm("AddMember", "Member", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="tab-content">
            <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
                <h3></h3>
                <div class="card-body justify-content-md-center">
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-user-circle"></i></span></div>
                                    <input class="form-control" asp-for="@Model.Surname" type="text" placeholder="Surname">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text "><i class="icon fa fa-user-circle"></i></span></div>
                                    <input class="form-control" asp-for="@Model.Othername" type="text" placeholder="Othernames">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text  ">Date of Birth</span></div>
                                    <input id="dob" class="form-control js-datepicker" type="date" asp-for="@Model.DoB" asp-format="{0:dd/MMM/yyyy}" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-venus-mars"></i></span></div>
                                    <select class="selectpicker form-control" title="Select Gender" data-style="btn-secondary" asp-items="@Model.Genders" asp-for="@Model.GenderId"></select>
                                </div>

                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-list"></i></span></div>
                                    <select class="selectpicker form-control " title="Select Career" data-live-search="true" data-style="btn-secondary" asp-for="@Model.CareerId" asp-items="@Model.Careers"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-heart-broken"></i></span></div>
                                    <select class="selectpicker form-control" title="Select Marital Status" data-style="btn-secondary" asp-for="@Model.MaritalStatusId" asp-items="@Model.MaritalStatuses"></select>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-list"></i></span></div>
                                    <select class="selectpicker form-control " title="Select Career" data-live-search="true" data-style="btn-secondary" asp-for="@Model.CareerId" asp-items="@Model.Careers"></select>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
                <h3></h3>
                <div>
                    <div class="card-body justify-content-md-center">
                        <div class="row justify-content-center">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-home"></i></span></div>
                                        <input class="form-control" asp-for="@Model.Residence" type="text" placeholder="Enter Residence">



                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-phone-alt"></i></span></div>
                                        <input class="form-control" asp-for="@Model.Telephone" type="text" placeholder="Enter Telephone">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-map-marker"></i></span></div>
                                        <input class="form-control" asp-for="@Model.Address" type="text" placeholder="Enter Address">

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-map-pin"></i></span></div>
                                        <input class="form-control" asp-for="@Model.Hometown" placeholder="Enter Hometown" />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-list"></i></span></div>
                                        <select class="form-control selectpicker" title="Select Region" data-live-search="true" data-style="btn-secondary" asp-for="@Model.RegionId" asp-items="@Model.Regions"></select>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
                <div class="card-body justify-content-md-center">
                    <div class="row justify-content-center">
                        <div class="col-md-7 text-center">
                            <div class="text-center">
                                <div class="text-center">
                                    <div class="form-group">
                                        <img id="imagePreview" height="175" width="150" class="text-center" />

                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <div class=" form-group">
                                    <div class="text-center">

                                        <input class="btn btn-secondary" id="Photo" name="Photo" onchange="ShowImagePreview(this)" type="file" asp-for="UploadPhoto" />


                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
            <div id="step-4" class="tab-pane" role="tabpanel" aria-labelledby="step-4">
                <h3></h3>                   
                <div class="card-body justify-content-md-center">
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-list"></i></span></div>
                                    <select class="form-control selectpicker " data-style="btn-secondary" title="Select Group" asp-for="@Model.GroupId" asp-items="@Model.Groups"></select>



                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-list"></i></span></div>
                                    <select class="form-control selectpicker" data-style="btn-secondary" asp-items="@Model.Branches" asp-for="@Model.BranchId" type="text" title="Select Branch"></select>

                                </div>
                            </div>






                            <button class="btn btn-primary bg-primary">Submit</button>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
    </div>

@model EKLEXIA.ViewModels.EditGrpVM;
<div class="modal fade" id="EditGrp" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        @using (Html.BeginForm("EditGroup", "Settings", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header">

                    <h6>Edit Group</h6>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>

                </div>


                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" asp-for="@Model.Name " required="required" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea type="text" asp-for="@Model.Description" required="required" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-primary">Save</button>
                </div>

            </div>
        }
    </div>
</div>
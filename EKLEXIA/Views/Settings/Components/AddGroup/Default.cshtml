
@model EKLEXIA.ViewModels.AddGroupVM;



<div class="modal fade" id="AddGroup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        @using (Html.BeginForm("AddGroup", "Settings", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header">

                    <h6>New Group</h6>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
                   
                </div>


                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" asp-for="@Model.Name " class="form-control" placeholder="Enter Group" required="required">
                    </div>
                    <div class="form-group">
                        <textarea type="text" asp-for="@Model.Description" class="form-control" placeholder="Enter Description" required="required"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-primary">Save</button>
                </div>

            </div>
        }
    </div>
</div>
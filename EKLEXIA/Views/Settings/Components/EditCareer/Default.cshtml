@{
    Layout = "~/Views/MainLayout.cshtml";
}
@model EKLEXIA.ViewModels.EditCareerVM;
    <div id="careerModal" class="modal-dialog" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Edit Career</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    


                                @using (Html.BeginForm("EditCareer", "Career", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text"><i class="icon fa fa-user-circle"></i></span></div>
                                            <input class="form-control" asp-for="@Model.CareerName" type="text" placeholder="Surname">


                                        </div>
                                    </div>

                                    <button class="btn btn-block btn-primary">Update</button>

                                }
                            </div>
                        </div>
                    </div>


                    </div>


@model EKLEXIA.ViewModels.AddTitheVM;

<link href="~/assets/select2/css/select2.min.css" rel="stylesheet" />
  <div class="modal fade" id="addTithe" data-backdrop="static" data-keyboard="false">
      <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header background-primary">
            <h6>New Tithe</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
</div>
<div class="modal-body">

            <div class="card-body">
         <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend"><span class="input-group-text">Payment Date</span></div>
                    <input id="dob" class="form-control js-datepicker" type="date" asp-for="@Model.Date" asp-format="{0:dd/MMM/yyyy}" />
                </div>
            </div>
            <div class="form-group">
                    <select class="form-control select2" title="Select Member" style="width:100%" asp-for="@Model.MemberId" asp-items="@Model.Members"></select>
            </div>    
            <div class="form-group">

                        <select class="form-control select2" title="Select Month" style="width:100%" asp-for="@Model.MonthId" asp-items="@Model.Months"></select>
              
            </div>
            <div class="form-group">
              
                    <input class=" form-control " asp-for="@Model.Amount" />

          
            </div>
            <div class="form-group">
               
                    <textarea class="selectpicker form-control "  asp-for="@Model.Description"></textarea>
              
            </div>
            </div>
 <div class="modal-footer">
  <button class="btn btn-sm btn-primary">Submit</button>
  </div>
    </div>
</div>


   </div>
  
   </div>

<script>

    $(document).ready(function () {



            $('.select2').select2({
                placeholder: 'Select an option'
            });

     });


</script>
         
          
                
           
           

      
        

@{
    Layout = "~/Views/MainLayout.cshtml";
}
@using EKLEXIA.Models;

@model EKLEXIA.ViewModels.AddAttendanceVM;

    
    <div class="row justify-content-center">
    <div class="col-md-9">
<div class="card">
    <div class="card-header">
        <h5 class="m-0 font-weight-bold text-center">Attendance</h5>

        <div class="card-header-right">


            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>

    </div>
    @using (Html.BeginForm("AddAttendance","Attendance",FormMethod.Post))
        {
                 <div class="card-body">
                        <div class="form-group">
                         
                            <input type="date" required asp-for="@Model.Date" class="form-control js-datepicker" asp-format="{0:dd/MMM/yyyy}">

                        </div>
                        
                        <div class="form-group">
                        <select type="text" id="meetingType" required class="select2 form-control" asp-items="@Model.Meetings" asp-for="@Model.MeetingId" style="width:100%" multiple></select>

                        </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Present/Absent</th>
                        
                                    <th>Comment</th>
                                </tr>
                            </thead>

                            <tbody>
                                @for (int i = 0; i < Model.Attendees.Count(); i++)
                                {
                                    <tr>
                                        <td>@Model.Attendees[i].Name</td>
                                        
                               
                                        <td>
                                            <input type="hidden" class="custom-checkbox" asp-for="@Model.Attendees[i].Value" />
                                            <label class="a8z-toggle-switch" data-style="rounded" data-size="sm">
                                                <input type="checkbox" asp-for="@Model.Attendees[i].IsSelected"/>
                                                <span class="toggle">
                                                    <span class="switch"></span>
                                                </span>
                                            
                                            </label>
                                        </td>
                                        <td>
                                                    <input asp-for="@Model.Attendees[i].Description" class="form-control input-sm" type="text" />


                                        </td>
                                    </tr>
                                                         
                                
                                }




                            </tbody>
                        </table>
                    </div>
</div>
        <div class="card-footer">
            <button class="btn btn-block btn-sm btn-primary">Save</button>
        </div>
        }
  
  </div>
  </div>
  </div>
  